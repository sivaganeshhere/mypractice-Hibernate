<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.nit.entity.Product" table="PRODUCT" dynamic-insert="true" dynamic-update="true">
<id name="regno" column="REGNO" length="4"> <!-- singular id field configuration -->
<generator class="increment"></generator>
</id>
<property name="mobileno" column="MOBILENO"/>
<property name="prepaid" column="PREPAID"/>
<property name="circle" column="CIRCLE" length="15"/>
<property name="callertune" column="CALLERTUNE"></property>
<property name="updationcount" column="UPDATIONCOUNT"></property>
</class>
</hibernate-mapping>
        